{
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "beforeBuildCommand": "pnpm web:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tauri-xray",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true
      },
      "path": {
        "all": false
      },
      "shell": {
        "all": true
      },
      "window": {
        "all": true
      },
      "process": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "externalBin": [
        "sidecar/xray"
      ],
      "active": true,
      "targets": "all",
      "identifier": "com.adolfheir.xray",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/*"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}